{{!-- Create table to display dealership information --}}

<div class="content">
    <h1>Dealerships</h1>
    <table id="dealerships-table">
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>delete</th>
            </tr>
        </thead>

        <tbody>

            {{#each data}}
            <tr data-value={{this.dealership_id}}>
                <td>{{this.dealership_id}}</td>
                <td>{{this.dealership_name}}</td>
                <td>{{this.dealership_email}}</td>
                <td>{{this.dealership_phone}}</td>

                <td><button onclick="deleteDealership({{this.dealership_id}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

{{!-- Add a new dealership --}}

<h3>Add a Dealership</h3>
    <p>To add a new dealership, please enter their information below and click 'Submit'!</p>
    <form id="add-dealership-form-ajax">
        <label for="input-dealership_name">Dealership Name: </label>
        <input type="text" name="input-dealership_name" id="input-dealership_name">
        
        <label for="input-dealership_email">Dealership Email: </label>
        <input type="email" name="input-dealership_email" id="input-dealership_email">

        <label for="input-dealership_phone">Dealership Phone Number: </label>
        <input type="tel" name="input-dealership_phone" id="input-dealership_phone">

        <input type="submit">
    </form>

{{!-- Create input field to search for dealership --}}

<h3>Search Using an HTML Form</h3>
    <p>Search by dealership name using the field below.</p>
    <form id="search-dealership-html" method='GET' action='/dealerships-page'>
        <label for="input-dealership_name">Search by Dealership: </label>
        <input type="text" name="dealership_name" id="input-dealership_name-html-search">
        
        <input type="submit">
        <a href='/dealerships-page'><button>Reset</button></a>
    </form>

<h3>Updating A Dealership Form</h3>
    <p>To update a dealership select its ID from the drop-down menu on the left and enter its updated data.</p>
    <form id="update-dealership-form-ajax">

        <label for="input-dealership_id">Dealership ID: </label>
        <select name="input-dealership_id" id="mySelect">
            <option value="test">Select a Dealership</option>
            {{#each data}}
            <option value="{{this.dealership_id}}">{{this.dealership_id}}</option>
            {{/each}}
        </select>

        <label for="input-dealership_name">Dealership name: </label>
        <input type="text" id="input-dealership-name-update" name="input-dealership-name-update">

        <label for="input-dealership_email">Dealership Email: </label>
        <input type="email" id="input-dealership-email-update" name="input-dealership-email-update">

        <label for="input-dealership_phone">Dealership Phone: </label>
        <input type="tel" id="input-dealership-phone-update" name="input-dealership-phone-update">

        <input type="submit">

    </form>
</div>

