<link rel='stylesheet' href='style.css' />
<div class="navbar">
    <a href="/">Home</a>
    <a href="/dealerships-page">Dealerships</a>
    <a class="active" href="/orders-page">Orders</a>
    <a href="/cars-page">Cars</a>
    <a href="/parts-page">Parts</a>
    <a href="/suppliers-page">Suppliers</a>
    <a href="/carparts-page">Cars & Parts</a>
</div>
<div class="content">
    <h1>Orders</h1>
    <table id="orders-table">
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>delete</th>
            </tr>
        </thead>

        <tbody>
            {{#each data}}
            <tr data-value={{this.order_id}}>
                <td>{{this.order_id}}</td>
                <td>{{this.order_date}}</td>
                <td>{{this.dealership_name}}</td>
                <td><button onclick="deleteOrder({{this.order_id}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <h3>Add an Order</h3>
    <p>To add a new order, please enter their information below and click 'Submit'!</p>
    <form id="add-order-form-ajax">
        <label for="input-order_date">Order Date: </label>
        <input type="date" name="input-order_date" id="input-order_date">

        <label for="input-dealership_id">Select a Dealership: </label>
        <select name="input-dealership_id" id="input-dealership_id">
                <option value="">Select a Dealership</option>
                {{#each dealerships}}
                <option value="{{this.dealership_id}}">{{this.dealership_name}}</option>
                {{/each}}
        </select>

        <input type="submit">
    </form>

    <h3>Search Using an HTML Form</h3>
    <p>Search by car model using the field below.</p>
    <form id="search-car-html" method='GET' action='/cars-page'>
        <label for="input-model_name">Search by Model: </label>
        <input type="text" name="model_name" id="input-model_name-html-search">
        
        <input type="submit">
        <a href='/cars-page'><button>Reset</button></a>
    </form>

    <h3>Updating A Car Form</h3>
    <p>To update a car select its ID from the drop-down menu on the left and enter its updated data.</p>
    <form id="update-car-form-ajax">

        <label for="input-car_id">Car ID: </label>
        <select name="input-car_id" id="mySelect">
            <option value="test">Select a Car</option>
            {{#each data}}
            <option value="{{this.car_id}}">{{this.car_id}}</option>
            {{/each}}
        </select>

        <label for="input-model_name">Model name: </label>
        <input type="text" id="input-model-name-update" name="input-model-name-update">

        <label for="input-color">Color: </label>
        <input type="text" id="input-color-update" name="input-color-update">

        <label for="input-order">Order ID: </label>
        <select name="input-order" id="input-order-update">
            <option>Select an Order:</option>
            {{#each orders}}
            <option value="{{this.order_id}}">{{this.order_id}}</option>
            {{/each}}
        </select>

        <input type="submit">

    </form>
</div>



{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
